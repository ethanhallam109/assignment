#include <stdio.h>

int main()
{
	char key[27] = {'q','w','e','r','t','y','u','i','o','p','a','s','d','f','g','h','j','k','l','z','x','c','v','b','n','m','\0'};//key for encryption
	char str[50]; 
	printf("message to encrypt:");
	scanf("%[^'\n']s", str); //stores message
	int i = 97, k;
	for (int n=0; str[n] != 0; n++)
	{
		for (i; i < 123; i++) 
		{
			k = i-97;

        if(str[n]<=122 && str[n]>=97)//converts to uppercase
        {
            str[n]=str[n]-32;
        }
		else if (str[n] == i)
		{
			str[n] = key[i-97];
			break;
		}
		}
	}
	printf("encrypted message: %s\n", str);//prints encrypted message
	return 0;
}
